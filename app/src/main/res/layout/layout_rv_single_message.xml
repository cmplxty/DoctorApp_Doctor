<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/messageContent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:maxWidth="250dp"
        android:textSize="18sp"
        android:padding="12dp"
        android:background="@drawable/message_to"
        android:text="This is formal message of a user! This is formal message of a user!"
        android:textColor="@android:color/white"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/messageImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:maxWidth="200dp"
        android:maxHeight="200dp"
        android:visibility="visible"
        android:src="@drawable/nophoto"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:background="@drawable/message_to"
        android:scaleType="centerCrop"
        android:cropToPadding="true"
        android:contentDescription="Message Image" />

    <Button
        android:id="@+id/viewPrescriptionBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/message_prescription"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="View Prescription"
        android:textColor="@android:color/white" />

</LinearLayout>