<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorSecondaryDark</item>
    </style>

    <style name="AppTheme.PopUpTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.CropImage" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorSecondaryDark</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.ViewImage" parent="AppTheme.Fullscreen">
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="AppTheme.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/cLight_DK1Cyan</item>
    </style>

</resources>
